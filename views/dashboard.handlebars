
<section class="new-post-form">
  {{#if posts.length}}
  <h2>Your Posts</h2>
  <ol id="dashboard-posts">
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
  {{else}}
    <h2>Create a Post</h2>
  {{/if}}
  <a href="/dashboard/add-post" class="add-post-btn"><i class="fas fa-plus fa-xs"></i> New Post</a>
</section>


<script src="/javascript/add-post.js"></script>
