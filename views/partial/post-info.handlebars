<article class="post">
  <div class="title">
    <a href="{{post_text}}" target="_blank">{{title}}</a>
    <span>({{format_url post_text}})</span>
</div>
  <div class="meta">
    Posted by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
  </div>
</article>